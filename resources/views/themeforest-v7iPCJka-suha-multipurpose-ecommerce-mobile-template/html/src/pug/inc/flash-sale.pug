// Flash Sale Slide 
.flash-sale-wrapper
    .container
        .section-heading.d-flex.align-items-center.justify-content-between.rtl-flex-d-row-r
            h6.d-flex.align-items-center.rtl-flex-d-row-r
                i.ti.ti-bolt-lightning.me-1.text-danger.lni-flashing-effect
                | Cyclone Offer

            // Please use event time this format: YYYY/MM/DD hh:mm:ss 
            ul.sales-end-timer.ps-0.d-flex.align-items-center.rtl-flex-d-row-r(data-countdown="2025/12/31 14:21:59")
                li
                    span.days 0
                    | d
                li
                    span.hours 0
                    | h
                li
                    span.minutes 0
                    | m
                li
                    span.seconds 0
                    | s

        // Flash Sale Slide
        .flash-sale-slide.owl-carousel
